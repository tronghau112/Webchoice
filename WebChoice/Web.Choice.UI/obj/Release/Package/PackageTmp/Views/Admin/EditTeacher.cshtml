@using Web.Choice.UI.Models
@{
    var teacher = Model as TeacherViewModel;
    ViewBag.Title = "Sửa Tài Khoản Giảng Viên " + teacher.Name;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var listSpecialities = ViewBag.ListSpecialities as List<SpecialityViewModel>;
}
<div class="title-content">
    <a class="title" href="@Url.Action("TeacherManager")">Quay Lại</a>
    <span class="title">@ViewBag.Title</span>
    @if (TempData["StatusId"] != null && (bool)TempData["StatusId"])
    {
        <span class="timer success"style="position: relative; left: 150px;font-family:Tahoma;font-weight: lighter">@TempData["Status"]</span>
    }
    else
    {
        <span class="timer failed"style="position: relative; left: 150px;font-family:Tahoma;font-weight: lighter">@TempData["Status"]</span>
    }
</div>
<div class="content">
    <div class="row">
        <div id="add_normal" class="col s12">
            @using (Html.BeginForm("EditTeacher", "Admin", FormMethod.Post))
            {
                <input type="hidden" id="id_teacher" name="teacherId" required value="@teacher.TeacherId" class="hidden">
                <div class="col l6 s12">
                    <div class="input-field">
                        <label for="name">Tên</label>
                        <input type="text" id="name" name="Name" required value="@teacher.Name">
                    </div>
                    <div class="input-field">
                        <label for="username">Tài khoản</label>
                        <input type="text" name="Username" id="username" required value="@teacher.UserName">
                    </div>
                    <div class="input-field">
                        <label for="password">Mật khẩu</label>
                        <input type="password" data-minlength="6" name="Password" id="password">
                        <span class="helper">Để trống nếu không muốn đổi mật khẩu</span>
                    </div>
                </div>
                <div class="col l6 s12">
                    <div class="input-field">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="Email" required value="@teacher.Email">
                    </div>
                    <div class="input-field">
                        <input type="date" name="Birthday" id="birthday" required value="@teacher.Birthday.Date.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="input-field">
                        <select name="specialityId" id="id_speciality" required>
                            @foreach (var item in listSpecialities)
                            {
                                if (item.SpecialityId == teacher.SpecialityId)
                                {
                                    <option value="@item.SpecialityId" selected>@item.SpecialityName</option>
                                }
                                else
                                {
                                    <option value="@item.SpecialityId">@item.SpecialityName</option>
                                }
                            }
                        </select>
                        <label>Ngành</label>
                    </div>
                    <div class="input-field">
                        <select name="Gender" id="gender" required>
                            @if (@teacher.Gender == "Nam")
                            {
                                <option value="Nam" selected>Nam</option>
                                <option value="Nữ">Nữ</option>
                            }
                            else
                            {
                                <option value="Nam">Nam</option>
                                <option value="Nữ" selected>Nữ</option>
                            }
                        </select>
                        <label>Giới Tính</label>
                    </div>
                </div>
                <div class="col l12">
                    <button type="submit" class="btn full-width" id="edit-teacher" name="edit-teacher">Sửa</button>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $('select').select();
</script>


