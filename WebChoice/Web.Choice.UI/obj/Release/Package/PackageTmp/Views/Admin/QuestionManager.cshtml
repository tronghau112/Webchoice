@using Web.Choice.UI.Models
@{
    ViewBag.Title = "Quản Lý Câu Hỏi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var list = Model as List<QuestionViewModel>;
    var listSubject = ViewBag.ListSubject as List<SubjectViewModel>;
}
<script type="text/javascript"
        src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML">
</script>
<script type="text/x-mathjax-config">
    MathJax.Hub.Config({
    tex2jax: {
    inlineMath: [ ['$','$'], ["\\(","\\)"] ],
    processEscapes: true
    }
    });
</script>
<div class="title-content">
    <span class="title">@ViewBag.Title <a href="#add_normal">THÊM</a></span>
    @if (TempData["StatusId"] != null && (bool)TempData["StatusId"])
    {
        <span class="timer success" style="position: relative; left: 150px;font-family:Tahoma;font-weight: lighter">@TempData["Status"]</span>
    }
    else
    {
        <span class="timer failed" style="position: relative; left: 150px;font-family:Tahoma;font-weight: lighter">@TempData["Status"]</span>
    }
</div>
<div class="content row col s12">
    @using (Html.BeginForm("DeleteQuestion", "Admin", FormMethod.Post))
    {
        <table class="striped centered" id="questions-table">
            <thead>
                <tr>
                    <th>Tên Môn Học</th>
                    <th>ID</th>
                    <th>Nội Dung</th>
                    <th>Đáp Án A</th>
                    <th>Đáp Án B</th>
                    <th>Đáp Án C</th>
                    <th>Đáp Án D</th>
                    <th>Thông Tin</th>
                    <th>
                        <p>
                            <label>
                                <input type="checkbox" id="checked-all" />
                                <span></span>
                            </label>
                        </p>
                    </th>
                    <th>
                        <i class="material-icons" id="icon-settings">settings</i>
                        <input type="submit" class="material-icons hidden" value="delete_forever" style="background: none; border: none; cursor: pointer; color: red;" id="icon-delete-all" />
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in list)
                {
                    <tr>
                        <td>@item.Subject.SubjectName</td>
                        <td>@item.Question.QuestionId</td>
                        <td>
                            @item.Question.Content

                        </td>
                        <td>
                            @item.Question.AnswerA
                            @if (item.Question.CorrectAnswer.Equals(item.Question.AnswerA))
                            {
                                <br /><span class="failed">(Đáp Án Đúng)</span>
                            }
                        </td>
                        <td>
                            @item.Question.AnswerB
                            @if (item.Question.CorrectAnswer.Equals(item.Question.AnswerB))
                            {
                                <br /><span class="failed">(Đáp Án Đúng)</span>
                            }
                        </td>
                        <td>
                            @item.Question.AnswerC

                            @if (item.Question.CorrectAnswer.Equals(item.Question.AnswerC))
                            {
                                <br /><span class="failed">(Đáp Án Đúng)</span>
                            }
                        </td>
                        <td>
                            @item.Question.AnswerD
                            @if (item.Question.CorrectAnswer.Equals(item.Question.AnswerD))
                            {
                                <br /><span class="failed">(Đáp Án Đúng)</span>
                            }
                        </td>
                        <td>
                            Chương @item.Question.Unit <br />
                            Môn @item.Subject.SubjectName
                        </td>
                        <td>
                            <p>
                                <label>
                                    <input type="checkbox" class="checkbox" name="Checkbox" value="@item.Question.QuestionId" onchange="check_box()" />
                                    <span></span>
                                </label>
                            </p>
                        </td>
                        <td>
                            <a href="@Url.Action("EditQuestion/" + item.Question.QuestionId)"><i class="material-icons">edit</i></a>
                            <a class="modal-trigger" href="#delete-@item.Question.QuestionId"><i class="material-icons">delete</i></a>
                        </td>
                    </tr>
                    <!-- Modal Structure -->
                    <div id="delete-@item.Question.QuestionId" class="modal">
                        <div class="modal-content">
                            <h4>Xác Nhận</h4>
                            <p>Bạn có xóa câu hỏi @item.Question.Content</p>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="modal-close waves-effect waves-green btn-flat">Hủy</a>
                            <a href="@Url.Action("DeleteQuestion/" + item.Question.QuestionId)" class="modal-close waves-effect waves-green btn-flat">Có</a>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    }
</div>
<div class="content">
    <div class="row" style="padding-top: 10px">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#add_normal" class="active" style="color: #02796e; font-weight: bold;">Thêm Câu Hỏi</a></li>
            </ul>
        </div>
        <div id="add_normal" class="col s12">
            @using (Html.BeginForm("AddQuestion", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                <div class="input-field">
                    <select name="SubjectId">
                        @foreach (var subject in listSubject)
                        {
                            <option value="@subject.SubjectId">@subject.SubjectName</option>
                        }
                    </select>
                    <label>Môn</label>
                </div>
                <div class="input-field">
                    <input id="number" type="number" name="Unit" value="7">
                    <label for="number">Chương <span class="failed">(*)</span></label>
                </div>
                <div class="input-field">
                    <textarea name="Content" class="materialize-textarea" required></textarea>
                    <label for="content">Nội Dung Câu Hỏi <span class="failed">(*)</span></label>
                </div>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Nội Dung Ảnh (Tùy Chọn)</span>
                        <input type="file" name="File">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Chỉ hỗ trợ ảnh đuôi .PNG .png .JPG .jpg">
                    </div>
                </div>
                <div class="input-field">
                    <textarea name="AnswerA" id="answer_a" class="materialize-textarea" onchange="get_val(this.id)" required></textarea>
                    <label for="answer_a">Đáp Án A <span class="failed">(*)</span></label>
                </div>
                <div class="input-field">
                    <textarea name="AnswerB" id="answer_b" class="materialize-textarea" onchange="get_val(this.id)" required></textarea>
                    <label for="answer_b">Đáp Án B <span class="failed">(*)</span></label>
                </div>
                <div class="input-field">
                    <textarea name="AnswerC" id="answer_c" class="materialize-textarea" onchange="get_val(this.id)" required></textarea>
                    <label for="answer_c">Đáp Án C <span class="failed">(*)</span></label>
                </div>
                <div class="input-field">
                    <textarea name="AnswerD" id="answer_d" class="materialize-textarea" onchange="get_val(this.id)" required></textarea>
                    <label for="answer_d">Đáp Án D <span class="failed">(*)</span></label>
                </div>
                <div class="input-field">
                    <select name="CorrectAnswer">
                        <option value="" id="val_answer_a">A</option>
                        <option value="" id="val_answer_b">B</option>
                        <option value="" id="val_answer_c">C</option>
                        <option value="" id="val_answer_d">D</option>
                    </select>
                    <label>Đáp Án Đúng</label>
                </div>
                <button type="submit" class="btn full-width" id="add-question" name="add-question">Thêm</button>
            }
        </div>
    </div>
</div>
<script>
    $('.tabs').tabs();
    $('.modal').modal();
    $('#questions-table').DataTable({
        "language": {
            "lengthMenu": "Hiển thị _MENU_",
            "zeroRecords": "Không tìm thấy",
            "info": "Hiển thị trang _PAGE_/_PAGES_",
            "infoEmpty": "Không có dữ liệu",
            "emptyTable": "Không có dữ liệu",
            "infoFiltered": "(tìm kiếm trong tất cả _MAX_ mục)",
            "sSearch": "Tìm kiếm",
            "paginate": {
                "first": "Đầu",
                "last": "Cuối",
                "next": "Sau",
                "previous": "Trước"
            }
        }
    });
    $('select').select();
    $('#checked-all').on('change', function () {
        if (this.checked) {
            $('.checkbox').each(function () {
                this.checked = true;
            });
            $('#icon-settings').addClass('hidden');
            $('#icon-delete-all').removeClass('hidden');
        } else {
            $('.checkbox').each(function () {
                this.checked = false;
            });
            $('#icon-settings').removeClass('hidden');
            $('#icon-delete-all').addClass('hidden');
        }
    });
    function check_box() {
        $('#icon-delete-all').removeClass('hidden');
        if ($('.checkbox:checked').length == $('.checkbox').length) {
            $('#checked-all').prop('checked', true);
        } else {
            $('#checked-all').prop('checked', false);
        }
        if ($('.checkbox:checked').length == 0) {
            $('#icon-delete-all').addClass('hidden');
            $('#icon-settings').removeClass('hidden');
        } else {
            $('#icon-settings').addClass('hidden');
            $('#icon-delete-all').removeClass('hidden');
        }
    }
    function get_val(id) {
        var answer = $("#" + id).val();
        $("#val_" + id).val(answer);
    }
</script>
