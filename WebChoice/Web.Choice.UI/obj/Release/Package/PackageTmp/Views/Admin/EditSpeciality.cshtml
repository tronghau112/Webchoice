@using Web.Choice.UI.Models
@{
    var speciality = Model as SpecialityViewModel;
    ViewBag.Title = "Sửa Ngành " + speciality.SpecialityName;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="title-content">
    <a class="title" href="@Url.Action("SpecialityManager")">Quay Lại</a>
    <span class="title">@ViewBag.Title</span>
    @if (TempData["StatusId"] != null && (bool)TempData["StatusId"])
    {
        <span class="timer success"style="position: relative; left: 150px;font-family:Tahoma;font-weight: lighter">@TempData["Status"]</span>
    }
    else
    {
        <span class="timer failed"style="position: relative; left: 150px;font-family:Tahoma;font-weight: lighter">@TempData["Status"]</span>
    }
</div>
<div class="content">
    <div class="row">
        <div id="add_normal" class="col s12">
            @using (Html.BeginForm("EditSpeciality", "Admin", FormMethod.Post))
            {
                <input type="hidden" id="id_speciality" name="SpecialityId" required value="@speciality.SpecialityId" class="hidden">
                <div class="input-field">
                    <label for="name">Tên Ngành</label>
                    <input type="text" id="speciality_name" name="SpecialityName" required value="@speciality.SpecialityName">
                </div>
                <button type="submit" class="btn full-width" id="edit-speciality" name="edit-speciality">Sửa</button>
            }
        </div>
    </div>
</div>
<script>
    $('select').select();
</script>


