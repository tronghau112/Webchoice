@using Web.Choice.UI.Models
@{
    ViewBag.Title = "Chi Tiết Đề Thi " + ViewBag.testCode;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var list = Model as List<QuestionViewModel>;
}

<div class="title-content">
    <a class="title" href="@Url.Action("TestManager")">Quay Lại</a>
    <span class="title">@ViewBag.Title</span>
</div>
<div class="content row col s12">
    <table class="striped centered" id="questions-table">
        <thead>
            <tr>
                <th>Nội Dung Câu Hỏi</th>
                <th>Đáp án A</th>
                <th>Đáp án B</th>
                <th>Đáp án C</th>
                <th>Đáp án D</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in list)
        {
            <tr>
                <td>
                    @item.Content
                </td>
                <td>@item.AnswerA</td>
                <td>@item.AnswerB</td>
                <td>@item.AnswerC</td>
                <td>@item.AnswerD</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<script>
    $('#questions-table').DataTable({
        "language": {
            "lengthMenu": "Hiển thị _MENU_",
            "zeroRecords": "Không tìm thấy",
            "info": "Hiển thị trang _PAGE_/_PAGES_",
            "infoEmpty": "Không có dữ liệu",
            "emptyTable": "Không có dữ liệu",
            "infoFiltered": "(tìm kiếm trong tất cả _MAX_ mục)",
            "sSearch": "Tìm kiếm",
            "paginate": {
                "first": "Đầu",
                "last": "Cuối",
                "next": "Sau",
                "previous": "Trước"
            }
        }
    });
    $('select').select();
</script>
