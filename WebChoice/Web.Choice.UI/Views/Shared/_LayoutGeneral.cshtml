@using Web.Choice.Common
@{
    ViewBag.Websitename = "Trắc nghiệm Online";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
        @ViewBag.Title
    </title>
    <link rel="stylesheet" href="~/Assets/css/normalize.css">

    <link rel="stylesheet" href="~/Assets/css/style.min.css">
    <link rel="stylesheet" href="~/Assets/css/font-awesome.css">
    <link rel="stylesheet" href="~/Assets/css/materialize.min.css">
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/Assets/js/materialize.min.js"></script>
</head>
<body class="body-login scrollbar">
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper nav-green">
                <a href="/" class="brand-logo cursor left"><i class="material-icons">home</i></a>
                <div class="right">
                    <span class="title" style="position: relative; right: 10px;font-family:Tahoma;font-weight: lighter">Xin chào: @Session[UserSession.NAME]</span>
                    <a href='@Url.Action("Logout")' style="font-family: Tahoma ;font-weight: lighter">Đăng xuất</a>
                </div>
            </div>
        </nav>
    </div>
    @RenderBody()

    <script>
        $('.dropdown-trigger').dropdown();
    </script>
</body>
</html>